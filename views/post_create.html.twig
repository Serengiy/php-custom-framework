{% extends 'layouts/default.html.twig' %}

{% block main %}
<div class="bg-body-tertiary p-5 rounded">
    <form action="/posts" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Заголовок</label>
            <input type="text" value="Lorem ipsum dolor sit amet." name="title" class="form-control" id="title" aria-describedby="titleHelp" required>
            <div id="titleHelp" class="form-text">Дайте своему посту броский заголовок.</div>
        </div>
        <div class="mb-3">
            <label for="body" class="form-label">Контент</label>
            <textarea name="body" id="body" cols="30" rows="10" class="form-control" required> lorem5 </textarea>
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
</div>
{% endblock %}